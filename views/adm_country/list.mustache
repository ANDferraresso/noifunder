{{> header }}

<div class="container-fluid">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="{{ cr.links.home }}">Home</a></li>
      <li class="breadcrumb-item">{{ cr.T.tit_Admin }}</li>
      <li class="breadcrumb-item">{{ cr.T.tit_Countries }}</li>
      <li class="breadcrumb-item active">{{ cr.T.tit_List }}</li>
    </ol>
  </nav>
</div><!-- /container -->

<main role="main">
<div class="container-fluid">
<h1>{{ cr.T.tit_ListCountries }}</h1>

{{^ lc.adm_countryTab.hasData }}
<div class="alert alert-info" role="alert">
  <strong>{{{ cr.T.msg_Attention }}}</strong> {{ cr.T.msg_NoRecordsFound }} {{# lc.adm_countryTab.filtered }}[ <a href="{{{ cr.links.adm_country_list }}}/1">{{ cr.T.lab_withoutFilters }}</a> ]{{/ lc.adm_countryTab.filtered }}
</div>
{{/ lc.adm_countryTab.hasData }}

{{# lc.adm_countryTab.hasData }}
<div class="alert alert-info" role="alert"><strong>{{ cr.T.lab_RecordsFound }}:</strong> {{ lc.adm_countryTab.rowsNum }} {{# lc.adm_countryTab.filtered }}{{ cr.T.lab_withFilters }} [ <a href="{{{ cr.links.adm_country_list }}}/1">{{ cr.T.lab_withoutFilters }}</a> ]{{/ lc.adm_countryTab.filtered }}</div>

<table class="table table-sm table-striped table-hover table-responsive w-auto text-nowrap">
  <thead>
    <tr>
      <th scope="col"><a href="{{ cr.links.adm_country_list }}/1?order_by=rid&order_prog={{ lc.order_prog }}{{ lc.list_qs }}">{{ lc.adm_countryTab.T.title.rid }}</a></th>
      <th scope="col"><a href="{{ cr.links.adm_country_list }}/1?order_by=name&order_prog={{ lc.order_prog }}{{ lc.list_qs }}">{{ lc.adm_countryTab.T.title.name }}</a></th>
      <th scope="col"><a href="{{ cr.links.adm_country_list }}/1?order_by=code&order_prog={{ lc.order_prog }}{{ lc.list_qs }}">{{ lc.adm_countryTab.T.title.code }}</a></th>
      <th scope="col"><a href="{{ cr.links.adm_country_list }}/1?order_by=active&order_prog={{ lc.order_prog }}{{ lc.list_qs }}">{{ lc.adm_countryTab.T.title.active }}</a></th>
      <th scope="col"><a href="{{ cr.links.adm_country_list }}/1?order_by=eu&order_prog={{ lc.order_prog }}{{ lc.list_qs }}">{{ lc.adm_countryTab.T.title.eu }}</a></th>
      <th scope="col"><a href="{{ cr.links.adm_country_list }}/1?order_by=currency&order_prog={{ lc.order_prog }}{{ lc.list_qs }}">{{ lc.adm_countryTab.T.title.currency }}</a></th>
      <th scope="col" colspan="4">&nbsp;</th>
    </tr>
    <tr>
{{{ lc.filterHTML }}}
    </tr>
  </thead>
  <tbody>
  {{# lc.adm_countryTab._data }}
    <tr>
      <th scope="row"><a href="{{{ cr.links.adm_country_read }}}/{{ rid }}">{{ rid }}</a></th>
      <td>{{ name }}</td>
      <td>{{ code }}</td>
      <td>{{{ active }}}</td>
      <td>{{{ eu }}}</td>
      <td>{{ currency }}</td>
      <td>&nbsp;<a href="{{{ cr.links.adm_country_read }}}/{{ rid }}"><span class="oi oi-eye"></span></a>&nbsp;</td>
      <td>&nbsp;<a href="{{{ cr.links.adm_country_update }}}/{{ rid }}"><span class="oi oi-pencil"></span></a>&nbsp;</td>
      <td>&nbsp;<a href="{{{ cr.links.adm_country_delete }}}/{{ rid }}"><span class="oi oi-trash"></span></a>&nbsp;</td>
      <td>&nbsp;<a href="{{{ cr.links.adm_country_create }}}?copy={{ rid }}"><span class="oi oi-copywriting"></span></a>&nbsp;</td>
    </tr>
  {{/ lc.adm_countryTab._data }}
  </tbody>
</table>

{{{ lc.pagHTML }}}
{{/ lc.adm_countryTab.hasData }}

<a class="btn btn-sm btn-secondary" href="{{{ cr.links.adm_country_create }}}" role="button">{{{ cr.T.btn_New }}}</a>

</div><!-- /container -->
</main>

{{> footer }}
{{> close_html }}